<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayoutClient"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#C6C6C6"
    android:orientation="vertical"
    android:layout_marginTop="12dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewClient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C6C6C6"
            android:padding="12dp">

            <TextView
                android:id="@+id/client_id_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#000"
                android:textSize="40sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/client_nom_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:text="Nom 1"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/client_id_txt"
                app:layout_constraintTop_toTopOf="@+id/client_id_txt" />

            <TextView
                android:id="@+id/client_prenom_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prenom 1"
                app:layout_constraintStart_toStartOf="@+id/client_nom_txt"
                app:layout_constraintTop_toBottomOf="@+id/client_nom_txt" />

            <TextView
                android:id="@+id/client_email_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email 1"
                app:layout_constraintStart_toStartOf="@+id/client_prenom_txt"
                app:layout_constraintTop_toBottomOf="@+id/client_prenom_txt" />

            <TextView
                android:id="@+id/client_tel_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tel 1"
                app:layout_constraintStart_toStartOf="@+id/client_email_txt"
                app:layout_constraintTop_toBottomOf="@+id/client_email_txt" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
